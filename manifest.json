{
    "manifest_version": 3,
    "name": "YouTube Interest Analyzer",
    "version": "1.0",
    "description": "Analyzes YouTube homepage to summarize user interests",
    "permissions": [
      "activeTab",
      "scripting",
      "storage"
    ],
    "host_permissions": [
      "*://*.youtube.com/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "16": "icon16.png",
      "48": "icon16.png",
      "128": "icon16.png"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon16.png",
        "128": "icon16.png"
      }
    }
  }